<%- include("partials/header") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="p-3">
        <img src="<%= blog[0].image %>" alt="" width="100%">
        <h3 class="pt-4"><%= blog[0].title %></h3>
        <p><%= blog[0].body %></p>
        <p><strong>Written on:</strong> <%= blog[0].created.toDateString() %></p>
        <form action="/blogs/<%= blog[0]._id %>?_method=DELETE" method="POST">
          <a href="/blogs" class="btn btn-primary">Go back</a>
          <a href="/blogs/<%= blog[0]._id %>/edit" class="btn btn-secondary">Edit</a>
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
