<%- include("partials/header") %>

<div class="container">

  <header class="jumbotron">
    <h1>Blog App</h1>
    <p>Read the best blogs ever written. Period.</p>
  </header>

  <div class="row" style="display: flex; flex-wrap: wrap;">
    <% blogs.forEach(function(blog){ %>
    <div class="col-lg-12 col-md-12">
      <div class="p-3 my-2 img-thumbnail">
        <div class="row">
          <div class="col-lg-4 col-md-6 col-12">
            <img src="<%= blog.image %>" alt="" width="100%">
          </div>
          <div class="col-lg-8 col-md-6 col-12">
            <div class="subtitle">
              <h3 class="mt-3"><%= blog.title %></h3>
              <% var body = blog.body %>
              <% if(body.length > 100){ %>
                  <p><%= body.substr(0,100) %>...</p>
              <% } else {%>
                  <p><%= body %></p>
              <% } %>
              <a href="/blogs/<%=blog._id %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <div class="container text-center my-5">
    <a href="/blogs/new" class="btn btn-primary btn-lg">Write a new blog</a>
  </div>
</div>

<%- include("partials/footer") %>
