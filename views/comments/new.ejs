<%- include("../partials/header") %>

<div class="container">
  <div class="row justify-content-center">
    <form class="col-lg-6" action="/blogs/<%= blog[0]._id %>" method="POST">
      <h2>Add comment to <%= blog[0].title %></h2>
      <div class="form-group">
        <label for="author">Comment Author</label>
        <input id="author" name="author" class="form-control">
      </div>
      <div class="form-group">
        <label for="body">Comment Body</label>
        <textarea id="body" name="body" class="form-control" rows="2"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Add comment</button>
      <a href="/blogs/<%= blog[0]._id %>" class="btn btn-secondary">Go back</a>
    </form>
  </div>
</div>

<%- include("../partials/footer") %>
